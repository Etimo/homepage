{
	"include": ["./src/**/*"],
	"compilerOptions": {
		"target": "ESNext",
		"module": "commonjs",
		"lib": ["dom", "es2017"],
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"noEmit": true,
		"skipLibCheck": true,
		"noImplicitAny": true
	}
}
